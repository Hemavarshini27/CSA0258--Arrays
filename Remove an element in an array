#include <stdio.h>  

int main ()  

{  

    int arr[50];  

    int pos, i, num; 

    printf (" \n Enter the number of elements in an array: \n ");  

    scanf (" %d", &num);  

      

    printf (" \n Enter %d elements in array: \n ", num);  

    for (i = 0; i < num; i++ )  

    {   printf (" arr[%d] = ", i);  

        scanf (" %d", &arr[i]);  

    }  

    printf( " Position : \n ");  

    scanf (" %d", &pos);  

    if (pos >= num+1)  

    {  

        printf (" \n Not possible.");  

    }  

    else  

    {  

        for (i = pos - 1; i < num -1; i++)  

        {  

            arr[i] = arr[i+1];  

        }  

        printf (" \n The array is: \n");  

        for (i = 0; i< num - 1; i++)  

        {  

            printf (" arr[%d] = ", i);  

            printf (" %d \n", arr[i]);  

        }  

    }  

    return 0;  

}
